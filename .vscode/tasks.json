{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build test",
            "type": "shell",
            "command": "g++",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "args": ["-std=c++14", "-g", "-Wall", "-fno-stack-protector",
                "-I", "include",
                "-I", "/usr/local/include",
                "-I", "${workspaceRoot}/src",
                "-I", "${workspaceRoot}/third_party",
                "-L", "/usr/local/lib",
                "-L", "/usr/lib/x86_64-linux-gnu",
                "test/next-test.cpp",
                "-o", "test/testing",
                "-l", "boost_thread",
                "-l", "boost_date_time",
                "-l", "boost_program_options",
                "-l", "boost_filesystem",
                "-l", "boost_system",
                "-l", "boost_regex",
                "-l", "boost_chrono",
                "-l", "boost_atomic",
                "-l", "crypto",
                "-l", "ssl",
                "-l", "pthread"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
    
}